<?xml version="1.0" encoding="UTF-8"?>

<gepinstall type="plugin">
	<nom>carnets_de_liaison</nom>
	<creationDate>10 2011</creationDate>
	<auteur>M. Leygnac</auteur>
	<licence>GNU/GPL</licence>
